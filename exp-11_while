DELIMITER @@
CREATE FUNCTION WHILE_DEMO(value CHAR(1))
RETURNS CHAR(20)
DETERMINISTIC
BEGIN
	DECLARE str CHAR(100);
    DECLARE i INT;
    SET str = ' ';
    SET i = 1;
    label: 
	WHILE i <= 5 DO
		SET str = CONCAT(str,value);
        SET i = i + 1;
	END WHILE label;
    RETURN str;
END; @@
DELIMITER ;



DELIMITER @@
CREATE FUNCTION REPEAT_DEMO(INC INT)
RETURNS CHAR(40)
DETERMINISTIC
BEGIN
	DECLARE INCOME INT;
    SET INCOME = 0;
REPEAT
SET INCOME = INCOME + INC;
UNTIL INCOME > 4000
    
    END REPEAT;
    RETURN "INCOME > 4000 DETECTED";
END;
@@
